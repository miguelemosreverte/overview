{
  "name": "overview",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "server": "node dashboard.js",
    "build": "electron-builder",
    "dist": "electron-builder --mac --win --linux",
    "dist-mac": "electron-builder --mac",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux"
  },
  "keywords": [
    "claude",
    "dashboard",
    "terminal",
    "development"
  ],
  "author": "Miguel Lemos",
  "license": "MIT",
  "description": "A bird's eye view of all your projects with integrated Claude terminal",
  "build": {
    "appId": "com.miguelemosreverte.overview",
    "productName": "Overview",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "node-pty": "^1.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  }
}
